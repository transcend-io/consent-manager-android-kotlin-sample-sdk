<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="io.transcend.samplesdk.MainActivity">

    <!-- Status Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/statusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initializing Transcend..."
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/transcendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Transcend"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:enabled="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Reset Transcend"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:enabled="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/printConsentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Print Consent Info"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:enabled="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/composeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Compose Example"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@android:color/holo_green_dark" />
    </LinearLayout>

    <!-- Consent Info Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <TextView
            android:id="@+id/consentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consent info will appear here..."
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:textColor="@android:color/darker_gray"
            android:padding="12dp"
            android:background="@android:color/white" />
    </ScrollView>

</LinearLayout>
